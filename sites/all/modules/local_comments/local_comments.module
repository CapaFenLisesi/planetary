function local_comments_article ($nid = -1) {
	if ($cid < 0) return;
	$res = db_query("SELECT * FROM {local_comments} WHERE nid = :nid", array(':nid' => $nid));

	$str = array();
	foreach ($res as $record) {
		$str[] =  array(
      'id' => $record->id,
      'nid' => $record->nid,
      'eid' => $record->eid,
      'cid' => $record->cid,
		);
	}
	drupal_json_output($str);
}

