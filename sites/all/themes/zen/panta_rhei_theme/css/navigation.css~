  margin-left: 10px;
  margin-right: 10px;
  padding: 4px;
  padding-left: 10px;
  text-align: left; /* LTR */
}

#navigation ul.links li, /* A simple method to get navigation links to appear in one line. */
#navigation .content li {
  float: left; /* LTR */
  padding: 0 10px 0 0; /* LTR */
}

